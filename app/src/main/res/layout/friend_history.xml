<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"


    android:background="@color/Activitybackground"
    >

    <RelativeLayout
        android:id="@+id/rlt"
        android:layout_width="match_parent"
        android:layout_height="69dp"

        android:layout_marginStart="10dp"

        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"

        android:layout_marginBottom="10dp"
        android:background="@drawable/content_back">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/bill"
            android:layout_width="55dp"
            android:layout_height="48dp"

            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@color/colorAccent" />

        <TextView
            android:id="@+id/titl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/bill"

            android:layout_toRightOf="@+id/bill"
            android:text="Title"
            android:textColor="@color/edittext"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titl"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:textColor="@color/edittext"
            android:layout_marginTop="-1dp"
            android:layout_marginBottom="16dp"
            android:layout_toEndOf="@+id/bill"
            android:layout_toRightOf="@+id/bill"

            android:ellipsize="end"
            android:maxLines="1"
            android:text="13/05/2000" />

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"

            android:layout_alignParentBottom="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"

            android:background="@drawable/content_money_green">

            <TextView
                android:id="@+id/expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:text="500"
                android:textColor="@color/white"
                android:textSize="18sp"

                android:textStyle="bold" />
        </FrameLayout>

    </RelativeLayout>



</RelativeLayout>